extends layout

block content
  
  .tool_container
    .nav
      .nav_title #{title}
      .nav_links
        .nav_link_container
          #nav_link Groceries.md
          i.fa.fa-trash-o#trash(aria-hidden='true')
        .nav_link.nav_add_file_btn
          div New File
            .nav_plus +
        a.fork_me(href="https://github.com/optomal7/mighty-morphin-markdown" target="_blank") Fork me on Github
    .content
      .title_bar 
        p.file_name ExampleFile.md
          span.save_file Save
      .content_container
        .markdown_container 
          .markdown_header markdown
          .markdown_textarea_container
            textarea.markdown_textarea
        .preview_container
          .preview_header preview
          div.preview_textarea
